<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form">
        <form action="/create" method="post" class="p-5 mr-4 text-white">
          <input
            class="block w-full m-3 outline-none bg-zinc-800 p-2 rounded-lg"
            type="text"
            placeholder="Title goes here"
            name="title"
          />

          <textarea
          name="details"
            class="block w-full m-3 outline-none resize-none bg-zinc-800 p-2 rounded-lg"
            name=""
            id=""
            placeholder="Write details about task"
          ></textarea>

          <input
            type="submit"
            value="Create Task"
            class="bg-zinc-600 rounded-md w-32 ml-3"
          />
        </form>
      </div>

      <div class="tasks text-white flex flex-wrap gap-[-20px]">
        <% if(files.length > 0){%>
            <% files.forEach(function(val){ %>
                <div
                class="task rounded-md bg-zinc-800 w-48 ml-8 p-2 tracking-tight text-2xl"
              >
                <h2> <%= val %> </h2>
                <div class="flex justify-between">
                  <a class="text-blue-500 text-base" href="/file/<%= val %>">Read More...</a>
  
                  <a href="/edit/<%= val %>" class="text-blue-500 text-base">Edit</a>
                </div>
              </div>
                <% }) %>
          <%  } else{%>
            <h3 class="bg-zinc-700 p-2 w-20 rounded-md h-10 ml-8">No Task.</h3>
            <%}%>
       

      </div>
    </div>
  </body>
</html>
